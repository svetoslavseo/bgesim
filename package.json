{
  "name": "e-sim-global-connect",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:ssr": "node server.js",
    "build": "vite build",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.js --outDir dist/server",
    "build:ssr": "npm run build:client && npm run build:server",
    "build:railway": "npm run build:client && npm run build:server && echo 'Build completed successfully'",
    "build:production": "npm run build:railway",
    "preview": "vite preview",
    "start": "cross-env NODE_ENV=production node server-production.js",
    "start:dev": "node server.js",
    "postinstall": "echo 'Dependencies installed successfully'",
    "ssr": "node server.js",
    "ssr-simple": "node server-simple.js",
    "ssr-working": "node server-working.js",
    "ssr-basic": "node server-basic.js",
    "ssr-proper": "node server-ssr.js",
    "ssr-full": "node server-ssr-working.js",
    "ssr-prerender": "node server-prerender.js",
    "prerender": "node prerender.js",
    "test-ssr": "node test-ssr.js",
    "verify-ssr": "node verify-ssr.js",
    "update-sitemap": "node scripts/update-sitemap-current.cjs",
    "update-sitemap-chinese": "node scripts/update-sitemap-chinese.cjs",
    "update-sitemap-english": "node scripts/update-sitemap-english.cjs",
    "verify-deployment": "node verify-deployment.js",
    "prepare-deployment": "cp plans-sample.json plans.json || echo 'Using existing plans.json'"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@mui/material": "^5.16.7",
    "@tailwindcss/typography": "^0.5.16",
    "compression": "^1.8.1",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.8",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-world-flags": "^1.6.0",
    "tsx": "^4.20.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "latest"
  }
}
